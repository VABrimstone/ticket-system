<div class='row'>
  <div class='col' >
    <h2 class='d-inline align-baseline'>Заявка</h2>
    <%= link_to 'Редактировать', edit_ticket_path, class: 'btn btn-primary align-baseline' %>
    <%= link_to 'К заявкам', tickets_path, class: 'btn btn-light align-baseline' %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="row mb-2">
      <div class="col-md-3"><strong>Заголовок</strong></div>
      <div class="col-md-9"><%= @ticket.title %></div>
    </div>
    <div class="row mb-2">
      <div class="col-md-3"><strong>Статус</strong></div>
      <div class="col-md-9"><%= ticket_status_for_display(@ticket.status) %></div>
    </div>
    <div class="row mb-2">
      <div class="col-md-3"><strong>Автор</strong></div>
      <div class="col-md-9"><%= @ticket.user.name %></div>
    </div>
    <div class="row mb-2">
      <div class="col-md-3"><strong>Отдел</strong></div>
      <div class="col-md-9"><%= @ticket.department.title %></div>
    </div>
    <div class="row mb-2">
      <div class="col-md-3"><strong>Сообщение</strong></div>
      <div class="col-md-9"><%= @ticket.message %></div>
    </div>
  </div>
</div>
