<header>
  <h1>
    <%= link_to 'Тикет-система', root_path%>
  </h1>
  <nav>
    <ul>
    <% if user_signed_in? %>
      <li>
        <%= button_to 'Выйти', destroy_user_session_path, method: :delete, data: { turbo: false } %>
      </li>
    <% else %>
      <li>
        <%= link_to 'Войти', new_session_path(:user) %>
      </li>
      <li>
        <%= link_to 'Регистрация', new_registration_path(:user) %>
      </li>
    <% end %>
    </ul>
  </nav>
</header>
